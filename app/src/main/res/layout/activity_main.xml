<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papers_co_sa52_blurred_white_blur_wallpaper_iphone_x_wallpaper"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomemessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            android:text=" Welcome Dherya Agarwal !"
            android:textColor="@color/grey"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/phonedis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="239dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="459dp"
            android:fontFamily="@font/cabin_bold"
            android:text="Instrusctions For Adding Expenditure -"
            android:textColor="@color/grey"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text='1. Open the Navigation Drawer by Pressing the "Three Lines on the Top Left Corner"'
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="2. Click On Add Expenditures"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text='3. Enter all th necessary details in the appropriate feilds and click on "Add Expense"'
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="440dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="258dp"
            android:fontFamily="@font/cabin_bold"
            android:text="Instrusctions To View Expenditures -"
            android:textColor="@color/grey"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="2. Click On View Expenditures"
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text='1. Open the Navigation Drawer by Pressing the "Three Lines on the Top Left Corner"'
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.13"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="3. All the expenditures will be dispayed on the View Expenditures page."
            android:textAlignment="viewStart"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="680dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="Created By Dherya Agarwal , Agastya Atreya , Shuhood Mohd Khan"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/phonedis"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="90909090909"
            android:textColor="@color/grey"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/empiddis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomemessage" />

        <TextView
            android:id="@+id/empiddis"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="Employee ID : EMP001 "
            android:textColor="@color/grey"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phonedis" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/papers_co_sa52_blurred_white_blur_wallpaper_iphone_x_wallpaper">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>